<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="page.title">
        <action method="setPageTitle">
            <argument name="title" xsi:type="string">Aberrant Sales Report</argument>
        </action>
    </referenceBlock>
    <body>
        <referenceContainer name="content">
            <block class="AberrantCode\SalesReport\Block\Adminhtml\Report" name="report" template="AberrantCode_SalesReport::report.phtml"/>
        </referenceContainer>
    </body>
</page>
